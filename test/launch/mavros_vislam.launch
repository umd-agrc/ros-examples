<launch>
  <!-- MAVROS -->
  <!-- See the correct UDP port from px4's mainapp.config (HIGHRES_IMU stream) -->
	<arg name="fcu_url" default="udp://127.0.0.1:46300@127.0.0.1:14559" />
	<arg name="gcs_url" default="" />
	<arg name="tgt_system" default="1" />
	<arg name="tgt_component" default="1" />
	<arg name="log_output" default="screen" />

	<include file="$(find mavros)/launch/node.launch">
		<arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
		<arg name="config_yaml" value="$(find snapdragon_mavros_vislam)/launch/snapdragon_px4_config.yaml" />
		
		<arg name="fcu_url" value="$(arg fcu_url)" />
		<arg name="gcs_url" value="$(arg gcs_url)" />
		<arg name="tgt_system" value="$(arg tgt_system)" />
		<arg name="tgt_component" value="$(arg tgt_component)" />
		<arg name="log_output" value="$(arg log_output)" />
	</include>
  
  <node pkg="snapdragon_mavros_vislam" type="snap_vislam_node" name="snap_vislam_node" output="screen">
      <!-- <rosparam file="$(find rpg_qualcomm_vislam)/parameters/default.yaml"/> -->
  	<remap from="vislam/pose_cov" to="mavros/vision_pose/pose_cov"/>
  	<remap from="vislam/speed_twist" to="mavros/vision_speed/speed_twist"/>
	</node>
	
</launch>
